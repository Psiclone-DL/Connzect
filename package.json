{
  "name": "connzect",
  "version": "1.0.49",
  "private": true,
  "main": "electron/main.cjs",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "dev": "npm run dev --workspace backend",
    "dev:backend": "npm run dev --workspace backend",
    "dev:frontend": "npm run dev --workspace frontend",
    "build": "npm run build --workspace backend && npm run build --workspace frontend",
    "build:desktop": "npm run build --workspace frontend && node scripts/prepare-desktop.js",
    "desktop": "electron .",
    "dev:desktop": "cross-env CONNZECT_WEB_URL=http://127.0.0.1:3000 CONNZECT_DEVTOOLS=1 electron .",
    "dist:win": "npm run build:desktop && electron-builder --win nsis",
    "dist:win:publish": "npm run build:desktop && electron-builder --win nsis --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.8.3"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.psiclone.connzect",
    "productName": "Connzect",
    "asar": false,
    "directories": {
      "output": "desktop-dist"
    },
    "files": [
      "electron/**/*",
      "desktop-runtime/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Psiclone-DL",
        "repo": "Connzect",
        "releaseType": "release"
      }
    ],
    "win": {
      "requestedExecutionLevel": "asInvoker",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Connzect",
      "runAfterFinish": true
    }
  }
}
